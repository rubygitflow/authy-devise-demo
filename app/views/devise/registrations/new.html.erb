<div class="columns">
  <div class="column col-4 col-mx-auto card">
    <div class="card-header">
      <h2>Sign up</h2>
    </div>

    <%= form_for(resource, as: resource_name, 
      url: registration_path(resource_name), 
      html: {class: "card-body"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, value: "#{resource.random_email}", 
          autofocus: false, autocomplete: "email", 
        class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, class: "form-label" %>
        <%= f.text_field :phone, autofocus: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" do %>
          Password
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
          class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, 
          autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="actions">
        <%= f.button "Sign up", type: "submit", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="card-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

